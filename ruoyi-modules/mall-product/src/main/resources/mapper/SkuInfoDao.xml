<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaofei.product.mapper.SkuInfoDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.xiaofei.common.product.entity.SkuInfoEntity" id="skuInfoMap">
        <result property="skuId" column="sku_id"/>
        <result property="spuId" column="spu_id"/>
        <result property="skuName" column="sku_name"/>
        <result property="skuDesc" column="sku_desc"/>
        <result property="catalogId" column="catalog_id"/>
        <result property="brandId" column="brand_id"/>
        <result property="skuDefaultImg" column="sku_default_img"/>
        <result property="skuTitle" column="sku_title"/>
        <result property="skuSubtitle" column="sku_subtitle"/>
        <result property="price" column="price"/>
        <result property="saleCount" column="sale_count"/>
    </resultMap>
    <select id="getRandSkuInfos" resultType="com.xiaofei.common.product.entity.SkuInfoEntity">
        SELECT *
        FROM pms_sku_info
        WHERE brand_id = #{brandId}
        order by rand()
        limit 10
    </select>

    <!-- 随机获取10条数据 -->


</mapper>
